<%= form_with(model: recipe, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :recipe_name %>
    <%= form.text_field :recipe_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :preparation_time %>
    <%= form.text_field :preparation_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cooking_time %>
    <%= form.text_field :cooking_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.check_box :public %>
    <%= form.label :public, class: 'form-check-label' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Recipe', class: 'btn btn-primary' %>
  </div>

  
<% end %>
